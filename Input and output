#include <iostream>
using namespace std;
int main() {
 int arr[5];
 int x;
 cout<<"Enter numbers to enter in array\n"<<endl;
 for(int i=0;i<5;i++){
     cin>>arr[i];
 }
 cout<<"\nPress 1 to display array\n"<<endl;
 cin>>x;
 cout<<"\n";
 if(x==1){
     cout<<"The array is:\n";
     for(int j=0;j<5;j++)
     cout<<arr[j];
 }
 else
  cout<<"Have a nice day :)"<<endl;
    return 0;
}

//Output:
//Enter numbers to enter in array

1
2
3
4
5

Press 1 to display array

1

The array is:
